import type { NextApiRequest, NextApiResponse } from "next";

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  try {
    if (req.method !== "POST") return res.status(405).json({ ok: false, error: "Method not allowed" });

    const owner = "TON_USER_GITHUB";  // ← remplace
    const repo  = "TON_REPO";          // ← remplace
    const eventType = "hf-space-updated"; // doit matcher ton YAML si tu filtres par type

    const r = await fetch(`https://api.github.com/repos/${owner}/${repo}/dispatches`, {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${process.env.GH_PAT}`,
        "Accept": "application/vnd.github+json",
      },
      body: JSON.stringify({
        event_type: eventType,
        client_payload: req.body || {}
      })
    });

    if (!r.ok) {
      const txt = await r.text();
      return res.status(500).json({ ok: false, error: txt });
    }
    return res.status(200).json({ ok: true });
  } catch (e: any) {
    return res.status(500).json({ ok: false, error: e?.message || String(e) });
  }
}
